<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
  <div class="w-full h-full bg-zinc-900 p-30 text-white">
    <a class="text-blue-500" href="/">back to home</a>
    <h1>All user</h1>
    <div class="users flex gap-3 flex-wrap" >
      <% users.forEach(function(user) { %>
        <div class="user max-w-50 p-4 bg-zinc-800 rounded-lg">
          <div class="w-50 h-43 rounded-lg bg-zinc-700 overflow-hidden">
            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
          </div>
          <h5 class="text-xl mt-3 tracking-tighter"><%= user.name %></h5>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3">
            <a class="text-blue-200" href="">Edit user</a>
            <a class="text-red-500" href="">Delete user</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
